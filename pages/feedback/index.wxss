page {
    background-color: #eee;
}
.fb_main {
    padding: 20rpx;
    color: #000;
}
.fb_main .fb_tips {
    display: flex;
    flex-wrap: wrap;
}
.fb_main .fb_tips text {
    width: 25%;
    padding: 10rpx;
    text-align: center;
    background-color: #fff;
    margin: 20rpx 10rpx;
    font-size: 20rpx;
}
.fb_main .fb_content {
    background-color: #fff;
    margin-top: 20rpx;
    padding: 10rpx;
}
.fb_main .fb_content .fb_tool {
    display: flex;
    flex-wrap: wrap;
}
.fb_main .fb_content .fb_tool button {
    margin: 0;
    width: 90rpx;
    height: 90rpx;
    font-size: 40rpx;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 20rpx;
    font-weight: normal;
    color: #666;
}
.fb_main .fb_content .fb_tool .up_img_item {
    margin-left: 20rpx;
}
.fb_main .form_btn_wrap {
    margin-top: 20rpx;
    float: right;
    width: 160rpx;
    background-color: var(--themeColor);
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 15rpx 20rpx;
    border-radius: 10rpx;
}
.fb_main .form_btn_wrap icon {
    margin-right: 5rpx;
}