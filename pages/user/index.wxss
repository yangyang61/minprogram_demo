page {
    background-color: #f5f5f5;
}
.user_info_wrap {
    height: 45vh;
    overflow: hidden;
    background-color: var(--themeColor);
    position: relative;
}
.user_info_wrap .user_btn {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 40%;
    border: 1px solid greenyellow;
    color: greenyellow;
    font-size: 38rpx;
    padding: 10rpx 30rpx;
    border-radius: 10rpx;
}
.user_info_wrap .user_img-wrap {
    position: relative;
}
.user_info_wrap .user_img-wrap .user_bg {
    height: 50vh;
    filter: blur(10rpx)
}
.user_info_wrap .user_img-wrap .user_info {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 30%;
    text-align: center;
}
.user_info_wrap .user_img-wrap .user_info .user_icon {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}
.user_info_wrap .user_img-wrap .user_info .user_name {
    color: #fff;
    font-size: 40rpx;
    margin-top: 20rpx;
}

/* 用户主体 */
.user_content {
    position: relative;
}
.user_content .user_main {
    padding-bottom: 100rpx;
    position: absolute;
    width: 90%;
    left: 50%;
    transform: translateX(-50%);
    top: -40rpx;
    color: #666;
}
.user_content .user_main .history_wrap {
    background-color: #fff;
    display: flex;
}
.user_content .user_main .history_wrap navigator {
    flex: 1;
    text-align: center;
    padding: 10rpx 0;   
}
.user_content .user_main .history_wrap navigator .his_num {
    color: var(--themeColor);
}
.user_content .user_main .orders_wrap {
    background-color: #fff;
    margin-top: 20rpx;
}
.user_content .user_main .orders_wrap .orders_title {
    padding: 15rpx;
    border-bottom: 1px solid #ccc;
}
.user_content .user_main .orders_wrap .orders_content {
    display: flex;
}
.user_content .user_main .orders_wrap .orders_content navigator {
    padding-top: 15rpx;
    padding-bottom: 15rpx;
    flex: 1;
    text-align: center;
}
.user_main .orders_wrap .orders_content navigator .iconfont {
    color: var(--themeColor);
}
.user_content .app_info_wrap .address_wrap {
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    padding: 20rpx;
    background-color: #fff;
}

.user_content .app_info_wrap .contact {
    display: flex;
    justify-content: space-between;
}
.user_content .app_info_wrap .app_info_item {
    padding: 20rpx;
    background-color: #fff;
    border-bottom: 1px solid #ccc;
}
.user_content .user_main .recommend_wrap {
    padding: 20rpx;
    margin-top: 20rpx;
    background-color: #fff;
}